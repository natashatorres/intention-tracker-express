<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <script src="https://kit.fontawesome.com/8ea013bdc7.js" crossorigin="anonymous"></script>
    <link rel="stylesheet" href="normalize.css">
	<link rel="stylesheet" href="styles.css">
    
    <title>Document</title>
</head>
<body>
    <img src="banner.png" id="banner">
    <div id="center">
    <div id="form">
    <form action="/tweet" method="POST">
        <input type="text" placeholder="name" name="name" class="name">
        <input type="text" placeholder="intention" name="tweet" class="intention">
        <button type="submit">Enter</button>
      </form>
    </div> 
    
    <div class="wrapper">
    <ul class="tweets">
    <% for(var i=0; i<tweets.length; i++) {%>
    <li class="tweet item">
        <span class="userName"><a href="/search?user=<%=tweets[i].name%>"><%= tweets[i].name %></a></span>
        <span class="userTweets"><%= tweets[i].tweet %></span>
        <span class="liked"><%= tweets[i].like %></span>
        <span class="hide"><%= tweets[i]._id %></span>

        <% if(tweets[i].like > 0){ %>
        <span><i class="fas fa-heart liked"></i></span>
        <%} else {%>
        <span><i class="far fa-heart liked" aria-hidden="true"></i></span> 
        <%}%>


        <span><i class="fa fa-trash" aria-hidden="true"></i></span>
     

    </li>
    <% } %>
    </ul>
    </div>
</div>
    <script src="main.js"> </script>
  
</body>
</html>